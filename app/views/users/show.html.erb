<h1>Connection between Amazon Alexa and Trello via Krello service</h1>
<br>
<p>User: <%=@user.name ? @user.name : @user.email %></p>
<% status =  @user.is_trello_connected? ? "Connected" : "Not Connected"  %>

<p>Trello account Status: <%= status %></p>

<% if status == "Connected" %>
    <form action="/syncs/1" method="post">
      <input type="hidden" name="authenticity_token" value="form_authenticity_token">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Revoke">
    </form>
<% else %>
  <%# <a href="https://trello.com/1/authorize?return_url=http://localhost:3000/syncs/new&name=Krello+Service&scope=read,write,account&response_type=token&key=a44bb9a7912d7d9dd893ee8801fa9255">Authorize Trello</a> %>
